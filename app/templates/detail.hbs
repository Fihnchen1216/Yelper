<body class="background">
    <form>
        <div class="card" style="width: 30rem;">
            <a href="{{model.business.url}}"><img src="{{model.business.photos}}" class="card-img-top" alt="images"></a>
            <div class="card-body">
            <h5 class="card-title">{{model.business.name}}</h5>
            <div class="card-text">Address: {{model.business.location.formatted_address}}</div>
            <div class="card-text">Phone: {{model.business.display_phone}}</div>
            <div class="card-text">Price: {{model.business.price}}</div>
            <div><small>1 = $, 2 = $$, 3 = $$$, 4 = $$$$</small></div><br>
            {{#if model.favorite}}
            <button class="unsave btn btn-outline-dark my-2 mr-sm-2" {{action 'unsave'}}>Unsave</button>
            <div><small>Click the button to unsave it in your favorit</small></div>
            {{else}}
            <button class="save btn btn-outline-dark my-2 mr-sm-2" {{action 'save'}}>Save</button>
            <div><small>Click the button to save it in your favorit</small></div>
            {{/if}}
            </div>
            <hr class="my-4">
            <div class="card-body">
            <div class="card-text">Rating: {{model.business.rating}}</div>
            <small>From 1-5</small>
            {{#g-map lat = model.business.coordinates.latitude lng = model.business.coordinates.longitude zoom=12 as |g|}}
                {{g.marker lat=model.business.coordinates.latitude lng=model.business.coordinates.longitude}}
            {{/g-map}}
            </div>
        </div>
    </form>
</body>
{{outlet}}
